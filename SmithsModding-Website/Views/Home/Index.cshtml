@{
    ViewBag.Title = "Home Page";
}

<div class="container main-jumbotron-container">
    <div class="jumbotron home-index-jumbotron">
        <table>
            <tr>
                <td>
                    <h1>Smiths Modding</h1>
                    <p class="lead">Welcome to the official SmithsModding website</p>
                </td>
                <td class="col-lg-1">
                    <img src="~/Content/res/Logo.jpg" class="img-rounded" alt="Logo" width="102" height="102">
                </td>
            </tr>
        </table>
    </div>
    <div id="armourCarousel" class="carousel slide" data-ride="carousel" interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#armourCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#armourCarousel" data-slide-to="1"></li>
            <li data-target="#armourCarousel" data-slide-to="2"></li>
            <li data-target="#armourCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="centred" src="~/Content/res/ArditeArmor.png" alt="Ardite Armor">
                <div class="carousel-caption">
                    <h3>
                        Ardite Armour
                    </h3>
                </div>
            </div>

            <div class="item">
                <img class="centred" src="~/Content/res/CobaltArmor.png" alt="Cobalt Armour">
                <div class="carousel-caption">
                    <h3>
                        Cobalt Armour
                    </h3>
                </div>
            </div>

            <div class="item">
                <img class="centred" src="~/Content/res/CopperArmor.png" alt="Copper Armour">
                <div class="carousel-caption">
                    <h3>
                        Copper Armour
                    </h3>
                </div>
            </div>

            <div class="item">
                <img class="centred" src="~/Content/res/LeadArmor.png" alt="Lead Armour">
                <div class="carousel-caption">
                    <h3>
                        Lead Armour
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

</div>