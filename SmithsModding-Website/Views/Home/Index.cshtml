@{
    ViewBag.Title = "Home Page";
}

<div class="container main-jumbotron-container">
    <div class="jumbotron home-index-jumbotron">
        <table>
            <tr>
                <td class="col-lg-1">
                    <h1>Smiths Modding</h1>
                    <p class="lead">Welcome to the official SmithsModding website</p>
                </td>
                <td class="col-lg-1">
                    <div id="logoCarousel" class="carousel slide" data-ride="carousel" interval="3000" style="float:right">
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="img-rounded" src="~/Content/res/Logo.jpg" alt="Logo" width="102" height="102" style="float:right">
                            </div>
                            <div class="item">
                                <img class="img-rounded" src="~/Content/res/ArmoryLogo.png" alt="Logo" width="102" height="102" style="float:right">
                            </div>
                            <div class="item">
                                <img class="img-rounded" src="~/Content/res/WeaponryLogo.png" alt="Logo" width="102" height="102" style="float:right">
                            </div>
                            <div class="item">
                                <img class="img-rounded" src="~/Content/res/WorldLogo.png" alt="Logo" width="102" height="102" style="float:right">
                            </div>
                            <div class="item">
                                <img class="img-rounded" src="~/Content/res/TinyStorageLog.png" alt="Logo" width="102" height="102" style="float:right">
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
